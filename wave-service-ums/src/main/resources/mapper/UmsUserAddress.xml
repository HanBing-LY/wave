<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.liyuan.wave.ums.mapper.UmsUserAddressMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.liyuan.wave.po.ums.UmsUserAddress" id="umsUserAddressMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="userPhone" column="user_phone"/>
        <result property="province" column="province"/>
        <result property="district" column="district"/>
        <result property="area" column="area"/>
        <result property="address" column="address"/>
        <result property="flag" column="flag"/>
        <result property="del" column="del"/>
        <result property="createName" column="create_name"/>
        <result property="modifyName" column="modify_name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="checkUserHasAddress" resultType="java.lang.Long">
        select count(1) from ums_user_address where user_id = #{userId} and del = 0
    </select>

    <select id="checkHasCommonAddress" resultType="java.lang.Long">
        select count(1) from ums_user_address where flag = 1 and id in
        <foreach collection="isList" open="(" separator="," close=")" item="id" index="i">
            #{id}
        </foreach>
    </select>

    <update id="clearCommonAddressByUserId">
        update ums_user_address set flag = 0 where user_id = #{userId} and flag = 1
    </update>


</mapper>